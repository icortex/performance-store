<%= render 'links' %>

<div><h1>Articulos en inventario en <%= @headquarter %></h1>
</div>
<table class="dataTablesId">
  <thead>

  <tr>
    <th>Imagen</th>
    <th>Marca</th>
    <th>Tipo</th>
    <th>Referencia</th>
    <th>Modelo</th>
    <th>Codigo de Barras</th>
    <th>Genero</th>
    <th>Talla</th>
    <th>Color</th>
    <th>Cantidad</th>
    <th>Precio</th>
    <th>Opciones</th>
  </tr>
  </thead>
  <tbody>

  <% @stocks.each do |stock| %>
      <tr>
        <td><%= image_tag stock.product.image.url :thumb %></td>
        <td><%= stock.product.brand.brand %></td>
        <td><%= stock.product.cloth_type.cloth_type %></td>
        <td><%= stock.product.reference %></td>
        <td><%= stock.product.model %></td>
        <td><%= stock.product.barcode %></td>
        <td><%= stock.product.gender %></td>
        <td><%= stock.product.size.size %></td>
        <td><%= stock.product.color.color %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.price %></td>

        <td width="140px">
          <%= link_to image_tag('/images/update_stock.png', :id=>"update_stock_img_#{stock.product.id}", :title => 'Actualizar inventario'), '#' %>
          <script type="text/javascript">
              jq('#<%="update_stock_img_#{stock.product.id}"%>').click(function() {
              jq('#stock_popup').load('<%= "#{edit_stock_path stock.id}"%>',null,function(data,status,request){
              });
              jq('#stock_popup').dialog({
                  height: 180,
                  width: 240 ,
                  title: 'Actualizar inventario',
                  resizable: false,
                  modal: true
              });
          });</script>

          <%= link_to image_tag('/images/view.png', :title => 'Ver articulo'), stock.product %>
          <%= link_to image_tag('/images/edit.png', :title => 'Modificar articulo'), edit_product_path(stock.product) %>
          <%= link_to image_tag('/images/delete.png', :title => 'Borrar de inventario'), stock, :confirm => 'El articulo sera borrado del inventario. Deseas continuar?', :method => :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<div id="stock_popup"></div>
