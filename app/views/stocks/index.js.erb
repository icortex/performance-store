jq(document).ready(function(){
    jq('#stock_dialog').dialog({
        autoOpen: false,
        resizable: false,
        width:'auto',
        height: 'auto',
        title: 'Actualizar inventario',
        modal: true
    });
});

function add_to_stock(hq_id,lot_product_id,unassigned_qty){
    jq.get('<%= new_stock_path %>',

        {'stock':
            {
            'lot_product_id':lot_product_id,
            'headquarter_id':hq_id
            },
         'max':unassigned_qty
        },

        function(data, status, request) {
                jq('#stock_dialog').html(data);
            });
    jq('#stock_dialog').dialog('open');
}