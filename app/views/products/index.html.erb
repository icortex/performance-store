<%= render 'stocks/links' %>

<div><h1>Lista de articulos</h1>
</div>
<table class="dataTablesId">
  <thead>

  <tr>
    <th>Imagen</th>
    <th>Marca</th>
    <th>Tipo</th>
    <th>Referencia</th>
    <th>Modelo</th>
    <th>Codigo de Barras</th>
    <th>Genero</th>
    <th>Talla</th>
    <th>Color</th>
    <th>Opciones</th>
  </tr>
  </thead>
  <tbody>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url :thumb %></td>
        <td><%= product.brand.brand %></td>
        <td><%= product.cloth_type.cloth_type %></td>
        <td><%= product.reference %></td>
        <td><%= product.model %></td>
        <td><%= product.barcode %></td>
        <td><%= product.gender %></td>
        <td><%= product.size.size %></td>
        <td><%= product.color.color %></td>

        <td width="140px">
          <%= link_to image_tag('/images/update_stock.png', :id=>"update_stock_img_#{product.id}", :title => 'Agregar a inventario'), '#' if can? :create, Stock %>
          <%= link_to image_tag('/images/view.png', :title => 'Ver articulo'), product %>
          <%= link_to image_tag('/images/edit.png', :title => 'Modificar articulo'), edit_product_path(product) if can? :update, Product %>
          <%= link_to image_tag('/images/delete.png', :title => 'Borrar de inventario'), product, :confirm => 'El articulo TAMBIEN sera borrado del inventario. Deseas continuar?', :method => :delete if can? :destroy, Product %>
        </td>
      </tr>
      <script type="text/javascript">
          jq('#<%="update_stock_img_#{product.id}"%>').click(function() {
              jq.get('<%= new_stock_path %>', {'product_id':'<%= product.id %>'}, function(data, status, request) {
                  jq('#stock_popup').html(data);
              });
              jq('#stock_popup').dialog({
                  title: 'Agregar a inventario',
                  resizable: false,
                  modal: true
              });
          });
      </script>
  <% end %>
  </tbody>
</table>
<%= render 'layouts/datatables_js' %>

<div id="stock_popup"></div>
