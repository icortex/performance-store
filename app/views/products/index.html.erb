<h1>Lista de Articulos</h1>

<table id="articulos">
  <tr>
    <th>Imagen</th>
    <th>Marca</th>
    <th>Tipo</th>
    <th>Referencia</th>
    <th>Modelo</th>
    <th>Codigo de Barras</th>
    <th>Genero</th>
    <th>Talla</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url :thumb %></td>
        <td><%= product.brand.brand %></td>
        <td><%= product.cloth_type.cloth_type %></td>
        <td><%= product.reference %></td>
        <td><%= product.model %></td>
        <td><%= product.barcode %></td>
        <td><%= product.gender %></td>
        <td><%= product.size.size %></td>
        <td><%= product.color.color %></td>


        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Borrar', product, :confirm => 'Estas seguro?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Nuevo Articulo', new_product_path %>

<script type="text/javascript">
  jq(document).ready(function() {
        jq('table[id="articulos"]').dataTable();
    });
</script>
