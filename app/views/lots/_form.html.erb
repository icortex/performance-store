<% content_for :secondary_menu do %>
<%= render 'links' %>
<% end %>

<%= form_for(@lot) do |f| %>
    <%= render 'layouts/error_messages', :model => @lot %>

    <div class="form_class">
      <table>
        <tr>
          <td>
            <%= f.label 'Descripcion' %>
          </td>
          <td>
            <%= f.text_field :description %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Fecha de llegada' %>
          </td>
          <td>
            <%= f.text_field :arrival_date, :id => 'datepicker' %>
            <script>
                jq(function() {
                    jq("#datepicker").datepicker({
                        dateFormat: 'yy-mm-dd'
                    });
                });
            </script>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Origen' %>
          </td>
          <td>
            <%= f.text_field :origin %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Peso (kg)' %>
          </td>
          <td>
            <%= f.text_field :weight %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Transportador' %>
          </td>
          <td>
            <%= f.collection_select :carrier, Carrier.all, :company, :company %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Flete' %>
          </td>
          <td>
            <%= f.text_field :freight %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label 'Costo total' %>
          </td>
          <td>
            <%= f.text_field :total_cost %>
          </td>
        </tr>
      </table>
      <br>

      <div class="actions">
        <%= f.submit 'Aceptar' %>
      </div>
    </div>
<% end %>
