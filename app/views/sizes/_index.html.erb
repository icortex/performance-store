<h1>Tallas</h1>

<table>

  <% @sizes.each do |size| %>
      <tr>
        <td><%= size.size %></td>
        <td><%= link_to image_tag('/images/edit.png', :title => 'Modificar talla'), '#', :id=>'size_'+size.id.to_s %>
          <script type="text/javascript">
              jq('#size_<%= size.id%>').click(function() {
                  jq('#edit_popup').load('<%= edit_size_path(size) %>', null, function(data, status, request) {

                  });
                  jq('#edit_popup').dialog({
                      height: 130,
                      width: 300 ,
                      title: 'Modificar talla',
                      modal: true,
                      resizable: false
                  });
              });
          </script>
          <%= link_to image_tag('/images/delete.png', :title => 'Borrar talla'), size, :confirm => 'La talla sera borrada. Deseas continuar?', :method => :delete %>
        </td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Nueva talla', '#', :id => 'size' %>
