<h2>Registrarse en WJSport</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    
  <p><%= f.label 'Nombre de usuario' %><br />
  <%= f.text_field :username %></p>

  <p><%= f.label 'Email' %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label 'Contraseña' %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label 'Confirmar contraseña' %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label 'Tipo de usuario' %><br/>
  <%= f.select :type, [ [ 'Administrador', 'Admin'], [ 'Vendedor', 'Seller']] %>

  <p><%= f.submit "Registrar" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
