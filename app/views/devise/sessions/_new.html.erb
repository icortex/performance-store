<h2>Inicio de Sesión</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=>'form_class' }) do |f| %>
    <p><%= f.label 'Nombre de usuario' %><br/>
      <%= f.text_field :username %></p>

    <p><%= f.label 'Contraseña' %><br/>
      <%= f.password_field :password %></p>

    <!--<p><%= f.label 'Sede' %><br/>-->
      <!--<%= f.select :headquarter_id, options_from_collection_for_select(Headquarter.all, "id", "name") %>-->
    <!--</p>-->

    <% if devise_mapping.rememberable? -%>
        <p><%= f.check_box :remember_me %> <%= f.label 'Recuerdame' %></p>
    <% end -%>

    <p><%= f.submit "Ingresar" %></p>

<% end %>
